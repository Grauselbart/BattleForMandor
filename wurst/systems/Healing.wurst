package Healing

import CombatText

public function unit.healUnit(unit target, real amount, boolean showTxt)
	var healModRel = 0.
	var healModAbs = 0.
	//Modification

	//Give healing
	let healing = amount *(1+ healModRel) + healModAbs
	target.addHP(healing)
	if showTxt
		//Create floating text
		target.healText(healing, this.getOwner())